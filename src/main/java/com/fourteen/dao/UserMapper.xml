<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fourteen.dao.UserMapper">
    <insert id="addUser" parameterType="user">
        insert into user(id, name, age, sex, img_url, location) VALUE
        (#{id},#{name},#{age},#{sex},#{imgUrl},#{location});
    </insert>

    <select id="queryAll" resultType="user">
        select * from user;
    </select>

    <select id="queryByLimit" resultType="user">
        select * from user limit #{page},#{limit}
    </select>

    <select id="countUser" resultType="_int">
        select count(*) from user
    </select>
</mapper>